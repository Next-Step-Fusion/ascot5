#!/usr/bin/env python

import a5py.ascot5io.ascot5tools as tools
import a5py.ascot5io.options     as options

import sys
sys.path.append('.')
import opt

if len(sys.argv) > 1:
    fn = sys.argv[1]
else:
    fn = "ascot.h5"

o   = opt.generateopt()
qid = options.write_hdf5(fn, o)
tools.set_active(fn, qid)
print("Options set and set as active.")
