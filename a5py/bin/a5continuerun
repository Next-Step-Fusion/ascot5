#!/usr/bin/env python3

import a5py.postprocessing.state2markers as state2markers

import sys

if len(sys.argv) >= 3:
   fn = sys.argv[1]
   markertype = sys.argv[2]
   if len(sys.argv) >= 4:
      endcond = int(sys.argv[3])
   else:
      endcond = 256

   state2markers.convert(fn,markertype,"endstate",endcond)
   print("Endstate converted to markers.")

else:
   print("Not enough arguments. Provide filename and markertype (fo, gc, ml)",
         "and optionally the endcond.")
