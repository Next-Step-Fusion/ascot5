#!/usr/bin/env python

import a5py.preprocessing.separate_markers as separate_markers
import sys

if len(sys.argv) < 3:
   print("Not enough arguments. Provide filename and amount of markers to separate.")

fn = sys.argv[1]
Nmark = int(sys.argv[2])

N = separate_markers.separate_n(fn, Nmark)
print(repr(N) + ' markers separated from ' + fn + '.')
